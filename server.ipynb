def analyze_pcap_structure(filepath):
    """
    PCAP dosyasÄ±nÄ± analiz eder.
    Payload analizi (SQLi/XSS) ve Port Tarama (Nmap >= 20 port) kararlarÄ± Python'da biter.
    """
    command = [
        "tshark", "-r", filepath, "-T", "fields",
        "-e", "ip.src",
        "-e", "tcp.dstport",
        "-e", "tcp.payload",
        "-e", "tcp.len",
        "-e", "tcp.flags"
    ]

    try:
        process = subprocess.run(command, capture_output=True, text=True, check=True)
        lines = process.stdout.strip().split('\n')

        final_traffic_map = {}

        for line in lines:
            if not line: continue
            parts = line.split('\t')
            if len(parts) < 5: continue

            src_ip = parts[0].strip()
            tcp_data_len_str = parts[3].strip()
            tcp_flags_str = parts[4].strip()
            dst_port_str = parts[1].strip()

            if not re.match(r"^\d{1,3}(\.\d{1,3}){3}$", src_ip): continue

            if src_ip not in final_traffic_map:
                final_traffic_map[src_ip] = {"ports": set(), "payloads": set(), "max_payload_len": 0}

            # Port Ekleme
            if dst_port_str:
                for p in dst_port_str.split(','):
                    if p.strip(): final_traffic_map[src_ip]["ports"].add(p.strip())

            # Payload Ã‡Ã¶zÃ¼mleme ve Uzunluk KontrolÃ¼
            if parts[2].strip():
                decoded = hex_to_string(parts[2].strip())
                clean_text = " ".join(decoded.split())

                try:
                    payload_len = int(tcp_data_len_str)
                    if payload_len > final_traffic_map[src_ip]["max_payload_len"]:
                        final_traffic_map[src_ip]["max_payload_len"] = payload_len
                except ValueError:
                    continue

                # TLS GÃ¼rÃ¼ltÃ¼ Filtresi ve Normal AkÄ±ÅŸ Filtresi
                is_encrypted_noise = clean_text.startswith("") and payload_len < 50
                is_normal_flow = 'P' in tcp_flags_str and 'A' in tcp_flags_str and payload_len < 15

                if not is_encrypted_noise and not is_normal_flow and len(clean_text) > 3:
                    final_traffic_map[src_ip]["payloads"].add(clean_text[:300])


        # --- PYHTON KESÄ°N KARAR AÅAMASI  ---

        python_blocked_ips = []
        python_block_reason = "No threats detected."

        for ip, data in final_traffic_map.items():
            port_count = len(data["ports"])
            payload_str = " | ".join(list(data["payloads"])) if data["payloads"] else "No Payload"
            max_len = data["max_payload_len"]

            status = "Normal"
            dangerous_keywords = ["UNION", "SELECT", "alert(", "<script>", "OR 1=1", "passwd", "sleep(", "benchmark("]

            # 1. Ä°Ã§erik KontrolÃ¼ (CRITICAL) - Web Attack
            for keyword in dangerous_keywords:
                if keyword.lower() in payload_str.lower():
                    # CRITICAL etiketini sadece payload 10 byte'tan uzunsa ata.
                    if max_len > 10:
                        status = f"CRITICAL: WEB ATTACK ({keyword})"
                    break

            # 2. Port Tarama KontrolÃ¼ (CRITICAL) 
            if status == "Normal" and port_count >= 20:
                status = f"CRITICAL: PORT SCAN ({port_count} Unique Ports)"

            # Karar SÄ±nÄ±flandÄ±rmasÄ±
            if status.startswith("CRITICAL"):
                python_blocked_ips.append(ip)
                python_block_reason = status


        return {
            "blocked_ips": python_blocked_ips,
            "block_reason": python_block_reason
        }

    except Exception as e:
        return f"Error analyzing pcap: {e}"

