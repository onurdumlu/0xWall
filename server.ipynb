# Flask'in Ã§alÄ±ÅŸacaÄŸÄ± portu belirleyin. 
FLASK_PORT = 5002

@app.route('/analyze', methods=['POST'])
def analyze_pcap_endpoint():
    if 'pcap_file' not in request.files:
        return jsonify({"error": "Dosya yÃ¼klenmedi"}), 400

    file = request.files['pcap_file']
    filepath = os.path.join("uploads", f"batch_{int(time.time())}.pcap")
    os.makedirs("uploads", exist_ok=True)
    file.save(filepath)

    try:
        # 1. PYHTON KESÄ°N KARAR ANALÄ°ZÄ° YAPAR
        result = analyze_pcap_structure(filepath)

        # --- DEÄÄ°ÅKEN ADI UYUMSUZLUÄU DÃœZELTÄ°LDÄ° ---
        # ArtÄ±k KeyError almayacak, Ã§Ã¼nkÃ¼ sadece "blocked_ips" ve "block_reason" bekleniyor.
        blocked_ips = result["blocked_ips"]
        block_reason = result["block_reason"]

        # 2. KARAR VERME VE YANIT OLUÅTURMA
        if blocked_ips:
            # Python CRITICAL dedi (Nmap veya Web Attack)
            final_response = {
                "blocked_ips": blocked_ips,
                "reason": f"Automatic Detection: {block_reason}"
            }
            print(f"[DEBUG] PYTHON KESÄ°N ENGELLEME: {blocked_ips} / Sebep: {block_reason}")

        else:
            # Trafik tamamen temiz
            final_response = {"blocked_ips": [], "reason": "Traffic is clean (Python filters confirmed no threat)."}

        # 3. YANITI DÃ–NDÃœR
        return jsonify(final_response)

    except Exception as e:
        print(f"âŒ Sunucu HatasÄ±: {e}")
        # Hata durumunda bile JSON formatÄ±nÄ± koru
        return jsonify({"error": f"Sunucu iÃ§i hata: {str(e)}", "blocked_ips": []}), 500
    finally:
        if os.path.exists(filepath): os.remove(filepath)

